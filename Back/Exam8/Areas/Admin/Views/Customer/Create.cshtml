@model Customer
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Info">Description</label>
                <input asp-for="Info" class="form-control" placeholder="Desc">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Work">Word</label>
                <input asp-for="Work" class="form-control" placeholder="Work">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Photo"></label>
                <input asp-for="Photo" type="file" class="form-control" placeholder="ImageFile">
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>